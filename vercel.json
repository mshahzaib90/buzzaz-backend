{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^(?!/api)(.*)", "dest": "frontend/build/$1" },
    { "src": ".*", "dest": "frontend/build/index.html" }
  ]
}
